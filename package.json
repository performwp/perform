{
  "name": "perform",
  "version": "1.3.0",
  "description": "Web Performance Optimization Plugin for WordPress",
  "main": "index.js",
  "scripts": {
      "start": "npm install && npm run watch",
      "dev": "cross-env NODE_ENV=development webpack",
      "production": "cross-env NODE_ENV=production webpack",
      "build": "npm run production",
      "watch": "cross-env webpack --watch",
      "lint": "npm run lint:js & npm run lint:scss & npm run lint:php",
      "lint:js": "eslint assets/src/**/*.js blocks/**/*.js includes/**/*.js tests/**/*.js",
      "lint:js-fix": "eslint assets/src/**/*.js blocks/**/*.js includes/**/*.js tests/**/*.js --fix",
      "lint:php": "./vendor/bin/phpcs -v --colors --standard=phpcs.ruleset.xml",
      "lint:php:fix": "./vendor/bin/phpcbf -v --colors --standard=phpcs.ruleset.xml",
      "lint:textdomain": "node ./wp-textdomain.js",
      "lint:scss": "stylelint assets/src/**/*.scss"
  },
  "repository": {
      "type": "git",
      "url": "git+https://github.com/performwp/perform.git"
  },
  "author": "Mehul Gohil",
  "license": "ISC",
  "bugs": {
      "url": "https://github.com/performwp/perform/issues"
  },
  "homepage": "https://github.com/performwp/perform#readme",
  "devDependencies": {
      "@babel/core": "^7.12.10",
      "@babel/plugin-syntax-jsx": "^7.12.1",
      "@babel/plugin-transform-react-jsx": "^7.12.7",
      "@babel/plugin-transform-runtime": "^7.12.10",
      "@babel/preset-env": "^7.12.10",
      "@babel/runtime": "^7.12.5",
      "@prettier/plugin-php": "^0.22.2",
      "autoprefixer": "^9.8.6",
      "babel-eslint": "^10.0.3",
      "babel-loader": "^8.2.2",
      "clean-webpack-plugin": "^1.0.0",
      "copy-webpack-plugin": "^6.4.0",
      "cross-env": "^5.2.0",
      "css-loader": "^7.1.2",
      "cssnano": "^4.1.8",
      "cssnano-preset-advanced": "^4.0.6",
      "eslint": "^5.15.3",
      "eslint-config-wordpress": "^2.0.0",
      "eslint-plugin-react": "^7.21.5",
      "expose-loader": "^5.0.0",
      "file-loader": "^6.2.0",
      "husky": "^9.1.6",
      "imagemin-webpack-plugin": "^2.4.0",
      "lint-staged": "^9.5.0",
      "mini-css-extract-plugin": "^2.9.2",
      "prettier": "^3.3.3",
      "sass-loader": "^16.0.3",
      "script-loader": "^0.7.2",
      "style-loader": "^4.0.0",
      "stylelint": "^13.8.0",
      "stylelint-config-prettier": "^8.0.0",
      "stylelint-config-wordpress": "^17.0.0",
      "stylelint-prettier": "^1.1.2",
      "webpack": "^5.96.1",
      "webpack-cli": "^5.1.4",
      "wp-pot": "^1.9.8",
      "wp-textdomain": "^1.0.1"
  },
  "dependencies": {
      "@wordpress/scripts": "^12.5.0"
  }
}
